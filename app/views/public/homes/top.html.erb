 <% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <p class="notice text-center" >
      <%= flash[:notice] %>
    </p>
  </div>
<% end %>

<div class = "container">
  <div class = "row">
    <div class= "col-sm-2 px-5 px-sm-0 mt-4">
      <%= render "public/genres/genre", genres: @genres %>
    </div>
    <div class = "col-sm-8 px-5 px-sm-0 mx-auto mt-4">
      <div class="d-flex align-items-center justify-content-center text-center">
        <img src="/assets/gazou10.jpg" class="card-img" alt="Card image">
        <div class="card-img-overlay ">
          <div class="px-5 py-4"  style="background-color:rgba(255,255,255,0.5); font-family: sans-serif;">
            <h3 style=font-family:cursive;><b>Welcome to NAGANO CAKE！</b></h3>
            <h5 class="mt-4">当店自慢のケーキをお届けします！</h5>
            <h5>会員でない方も商品の閲覧はできますが、</h5>
            <h5>購入には会員登録が必要になります。</h5>
          </div>
        </div>
      </div>

      <%#新着商品4件%>
      <h2>新着商品</h2>
      <div class = "row text-center">
        <% @items.each.with_index(4) do |item| %>
          <div class="col-lg-3">
            <p>
              <%= link_to item_path(item.id)  do %>
                <%= image_tag item.item_image, size:"200x150" %>
              <% end %>
            </p>
            <p>
              <%= item.item_name %>
            </p>
            <p>
              ￥<%= item.non_taxed_price.to_s(:delimited) %>円
            </p>
          </div>
        <% end %>
      </div>
      <p>
        <%= link_to "全ての商品を見る>", '/items' %>
      </p>
    </div>
  </div>
</div>