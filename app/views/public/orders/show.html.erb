<div class="container">
    <div class="row">
        <div class="col-3 mb-5">
            <h5 class="text-center bg-light mt-5">注文履歴詳細</h5>
            <div class="row">
                <div class="col-5 mb-5 bg-light">
                    <table class="table table-hover table-inverse">
                        <tbody>
                            <tr>
                                <td>注文日</td>
                                <td><%= @order.created_at %></td>
                            </tr>
                            <tr>
                                <td>配送先</td>
                                <td>
                                〒<%= @order.shipping_post_code %></br>
                                <%= @order.shipping_address %></br>
                                <%= @order.shipping_name %>
                                </td>
                            </tr>
                            <tr>
                                <td>支払方法</td>
                                <td><%= @order.payment_method %></td>
                            </tr>
                            <tr>
                                <td>ステータス</td>
                                <td><%= @order.order_status %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<h5>商品金額の合計</h5><%= @price %>
<h5>送料</h5><%= @order.postage %>
<h5>合計</h5><%= @order.billing_amount %>

<% @order_details.each do |order_detail| %>
<h5>商品名</h5><%= order_detail.item.item_name %>
<h5>商品の金額</h5><%= order_detail.price %>
<h5>数量</h5><%= order_detail.amount %>

<% end %>