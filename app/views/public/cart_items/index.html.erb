<div class="container">

  <div class="row">
    <div class="col-3">
      <h5 class="text-center bg-light">ショッピングカート</h5>
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: 'btn btn-danger'%>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <table class="table table-hover table-inverse">
        <thead>
          <tr class="bg-light">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= image_tag cart_item.item.item_image, size:"50x50" %>
                <%= cart_item.item.item_name %>
              </td>
              <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
              <td>
              <%= form_with(model:cart_item, url:cart_item_path(cart_item), method: :patch, local:true) do |f| %>
              <%= f.select :amount, options_for_select((1..10).to_a, {selected: cart_item.amount} ) %>
              <%= f.submit "変更" %>
              <% end %>
              </td>
              <td><%= cart_item.subtotal.to_s(:delimited) %></td>
              <td><% @sum += cart_item.subtotal %></td>
              <td><%= link_to '消去する', cart_item_path(cart_item), method: :delete ,class: "btn btn-sm btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>
    <div class="col-6">
      <table class="table row justify-content-end">
        <tr>
          <th class="bg-light">合計</th>
          <td><%= @sum.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
    <div class="col12">
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    </div>
  </div>

</div>