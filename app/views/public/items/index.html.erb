

  <div class="container">
    <div class="row mt-5 align-items-end">
      <h1 class="font-weight-bold">商品一覧</h1>
      <h3 class="ml-3">
      (全<%= @items.count %>件)
      </h3>
    </div>
    <div class="row mt-5">
      <% @items.each do |item| %>
        <div class="col-lg-3 col-md-6 mb-4">
          <p>
            <%= link_to item_path(item.id)  do %>
              <%= image_tag item.item_image, size:"150x100" %>
            <% end %>
          </p>
          <p>
            <%= item.item_name %>
          </p>
          <p>
            ￥<%= item.add_tax_price.to_s(:delimited) %>円
          </p>
        </div>
      <% end %>
    </div>
    <%= paginate @items %>
  </div>