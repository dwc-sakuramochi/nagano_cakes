<div class="container">
  <div class="row">
    <div class="col-2 mb-5 offset-1">
      <h5 class="text-center bg-light mt-5 font-weight-bold">配送先編集</h5>
   </div>
 </div>

<% if @shipping_address.errors.any? %>
  <div id = "error_explanation">
    <ul>
      <% @shipping_address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class="row">
    <div class="col-12 mb-5">
      <%= form_with(model:@shipping_address, url:shipping_address_path, local:true)do |f| %>
        <div class="form-group col-xs-9">
          <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
          <%= f.text_field :shipping_post_code, autofocus: true, :placeholder => "0000000", class: "offset-1 rounded ml-5" %>
        </div>
        <div class="form-group col-xs-9">
          <%= f.label :住所 %>
          <%= f.text_field :shipping_address, autofocus: true, :placeholder => "東京都渋谷区代々木神園町0-0", class: "offset-2 col-6 rounded pl-0" %>
        </div>
        <div class="form-group col-xs-9">
          <%= f.label :宛名 %>
          <%= f.text_field :shipping_name, autofocus: true, :placeholder => "令和道子", class: "offset-2 rounded" %>
          <%= f.submit "変更内容を保存", class: 'btn btn-success offset-4' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
