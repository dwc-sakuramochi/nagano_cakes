<div class="container">
  
  <div class="row">
    <div class="col-3 mb-5">
      <h5 class="text-center bg-light">ジャンル一覧・追加</h5>
    </div>
  </div>
  
  <div class="row">
    <div class="col-5 mb-5">
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <%= f.label :ジャンル名, class: "font-weight-bold" %>
        <%= f.text_field :name, placeholder: "ジャンル名" %>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-5 mb-5">
      <table class="table table-hover table-inverse">
        <thead>
          <tr class="bg-light">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>