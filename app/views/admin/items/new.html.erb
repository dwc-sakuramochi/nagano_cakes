<div class="container">

  <div class="row">
    <div class="col-3 mb-5">
      <h5 class="text-center bg-light">商品新規登録</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-12 mb-5">
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
        <form>
          <div class="form-group">
            <%= f.label :商品画像 %>
            <%= f.file_field :item_image, accept: "image/*" %>
          </div>
          <div class="form-group">
            <%= f.label :商品名 %>
            <%= f.text_field :item_name, placeholder: "商品名" %>
          </div>
          <div class="form-group">
            <%= f.label :商品説明 %>
            <%= f.text_area :item_explanation, placeholder: "ここに説明文を記述します" %>
          </div>
          <div class="form-group">
            <%= f.label :ジャンル %>
            <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %>
          </div>
          <div class="form-group">
            <%= f.label :税抜価格 %>
            <%= f.text_field :non_taxed_price, placeholder: "1000" %>円
          </div>
          <div class="form-group">
            <%= f.label :販売ステータス %>
            <%= f.radio_button :sale_status, true %>
            <%= f.label :販売ステータス, '販売中', value: true %>
            <%= f.radio_button :sale_status, false %>
            <%= f.label :販売ステータス, "販売停止中", value: false %>
          </div>
          <div class="form-group">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        </form>
      <% end %>
    </div>
  </div>

</div>
