<div class="container">

    <div class="row">
        <div class="col-2 mt-5">
            <h5 class="text-center mt-5" style="background-color: #EEEEEE">商品詳細</h5>
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            <%= image_tag @item.item_image, size:"300x300" %>
        </div>
        <div class="col-2">
            <label class="mb-4">商品名</label><br>
            <label class="mb-4">商品説明</label><br>
            <label class="mb-4">ジャンル</label><br>
            <label>税込価格</label><br>
            <label class="mb-4">(税抜価格)</label>
            <label>販売ステータス</label>
        </div>
        <div class="col-6">
           <p class="fs-3 mb-4"><%= @item.item_name %></p>
           <p class="mb-4"><%= @item.item_explanation %></p>
           <p class="mb-5"><%= @item.genre.name %></p>
           <p class="mb-2">
               <%= @item.add_tax_price.to_s(:delimited) %>
               (<%= @item.non_taxed_price.to_s(:delimited) %>)円
           </p>
            <%if @item.sale_status == true %>
              <p class="font-weight-bold text-success mt-4">販売中</p>
            <% else %>
              <p class="font-weight-bold text-secondary mt-4">販売停止中</p>
            <% end %>
        </div>
         <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success mx-auto d-block" %>
    </div>
</div>