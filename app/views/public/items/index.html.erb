

  <div class="container">
    <h1>商品一覧</h1>
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-lg-3 col-md-6 mb-4">
          <p>
          <%= link_to item_path(item.id)  do %>
            <%= image_tag item.item_image, size:"100x100" %>
          <% end %>
          </p>
          <p>
          <%= item.item_name %>
          </p>
          <p>
          ￥<%= item.non_taxed_price %>
          </p>
        </div>
      <% end %>
    </div>
  </div>