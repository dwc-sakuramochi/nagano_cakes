

  <div class="container">
    <div class="row">
      <h1>商品一覧</h1>
      <% @items.each do |item| %>
        <div class="col-lg-3 col-md-6 mb-4">
          <%= link_to item_path(item.id)  do %>
            <%= image_tag item.item_image("100x100") %>
          <% end %>
          <%= item.item_name %>
          <%= item.non_taxed_price %>
        </div>
      <% end %>
    </div>
  </div>