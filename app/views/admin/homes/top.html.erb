<div class="container">

  <div class="row">
    <div class="col-3 mb-5">
      <h3 class="text-center bg-light mt-5">注文履歴一覧</h5>
   </div>
 </div>

  <div class="row">
    <div class="col-5 mb-5 bg-light">
      <table>
          <thead>
              <tr>
                  <th>購入日時</th>
                  <th>購入者</th>
                  <th>注文個数</th>
                  <th>注文ステータス</th>
              </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                  <td>
                    <%= link_to admin_order_path(order) do %>
                     <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
                    <% end %>
                  </td>
                  <td><%= order.customer.first_name %><%= order.customer.last_name %></td>
                  <td><%= order.order_details.count %></td>
                  <td><%= order.order_status %></td>
              </tr>
            <% end %>
          </tbody>
        <div><%= paginate @orders %></div>
      </table>
    </div>
  </div>
</div>