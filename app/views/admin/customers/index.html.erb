<div class="container">

  <div class="row">
    <div class="col-3 mb-5">
      <h5 class="text-center mt-5" style="background-color: #EEEEEE">会員一覧</h5>
   </div>
 </div>

  <div class="row">
    <div class="col-12 mb-5">
      <table class="table">
          <thead>
              <tr class="bg-light">
                  <th>会員ID</th>
                  <th>氏名</th>
                  <th>メールアドレス</th>
                  <th>ステータス</th>
              </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                  <td><%= customer.id %></td>
                  <td>
                    <%= link_to admin_customer_path(customer), class: "text-dark", style: "text-decoration: underline;" do %>
                     <%= customer.first_name %><%= customer.last_name %>
                    <% end %>
                  </td>
                  <td><%= customer.email %></td>
                  <td>
                    <%if customer.withdraw == false %>
                      <span class="text-success font-weight-bold">有効</span>
                    <% else %>
                     <span class="text-secondary font-weight-bold">退会済</span>
                    <% end %>
                  </td>
              </tr>
            <% end %>
          </tbody>
      </table>
      <div><%= paginate @customers %></div>
    </div>
  </div>
  
</div>