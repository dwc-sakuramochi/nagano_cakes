<h2>マイページ</h2>

<h2>登録情報</h2>
<%= link_to '編集する', edit_customer_path(@customer), class: "btn btn-sm btn-success" %>
<table>
<tr>
  <td>氏名</td>
  <td><%= @customer.first_name %> <%= @customer.last_name %></td>
</tr>
<tr>
  <td>カナ</td>
  <td><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
</tr>
<tr>
  <td>郵便番号</td>
  <td><%= @customer.post_code %></td>
</tr>
<tr>
  <td>住所</td>
  <td><%= @customer.address %></td>
</tr>
<tr>
  <td>電話番号</td>
  <td><%= @customer.tel %></td>
</tr>
<tr>
  <td>メールアドレス</td>
  <td><%= @customer.email %></td>
</tr>
</table>

<h2>配送先</h2>
<%= link_to '一覧を見る', shipping_addresses_path(@customer), class: "btn btn-sm btn-primary" %>
<h2>注文履歴</h2>
<%= link_to '一覧を見る', orders_path(@customer), class: "btn btn-sm btn-primary" %>