<div class="container">

  <div class="row">
    <div class="col-3 mb-5">
      <h3 class="text-center bg-light mt-5"><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h5>
   </div>
 </div>

  <div class="row">
    <div class="col-5 mb-5">
      <table>

        <tr>
          <th>会員ID</th>
        <th><%= @customer.id %></th>
        </tr>
        <tr>
          <th>氏名</th>
          <th><%= @customer.first_name %> <%= @customer.last_name %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= @customer.post_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= @customer.address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= @customer.tel %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th>
            <%if @customer.withdraw == false %>
             <p class="mt-3 text-success">有効</p>
            <% else %>
             <p class="mt-3 text-secondary">退会済</p>
            <% end %>
          </th>
        </tr>
        <tr>
          <th><%= link_to "編集する",edit_admin_customer_path, class: "btn btn-success" %></th>
          <th><%= link_to "注文履歴一覧を見る",admin_path, class: "btn btn-primary" %></th>
        </tr>

      </table>
    </div>
  </div>
</div>