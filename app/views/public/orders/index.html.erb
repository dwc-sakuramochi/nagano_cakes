<div class="container">

  <div class="row">
    <div class="col-3 mb-5">
      <h5 class="text-center bg-light mt-5">注文履歴一覧</h5>
   </div>
 </div>

  <div class="row">
    <div class="col-5 mb-5 bg-light">
      <table>
          <thead>
              <tr>
                  <th>注文日</th>
                  <th>配送先</th>
                  <th>注文商品</th>
                  <th>支払い金額</th>
                  <th>ステータス</th>
                  <th>注文詳細</th>
              </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                  <td><%= order.created_at %></td>
                  <td>
                    〒<%= order.shipping_post_code %></br>
                    <%= order.shipping_address %></br>
                    <%= order.shipping_name %>
                  </td>
                  <td>
                    
                  </td>
                  <td><%= order.order_status %></td>
                  <td><%= link_to "表示する",order_path(order) %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>